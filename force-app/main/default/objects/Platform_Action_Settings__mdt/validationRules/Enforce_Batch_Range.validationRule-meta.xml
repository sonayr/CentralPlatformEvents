<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Enforce_Batch_Range</fullName>
    <active>true</active>
    <description>Doesn&apos;t allow the Batch Size range to exceed 1-2000</description>
    <errorConditionFormula>OR(
 Batch_Size__c &lt; 1,
 Batch_Size__c &gt; 2000
)</errorConditionFormula>
    <errorDisplayField>Batch_Size__c</errorDisplayField>
    <errorMessage>Batch Size must be between 1-2000</errorMessage>
</ValidationRule>
